<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/contentsWrapper" >

    <RelativeLayout
        android:id="@+id/wrapper1"
        style="@style/contentWrapper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="8dp"
        android:paddingRight="4dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo1"
            style="@style/photoPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/photo_text1"
            style="@style/photoText"
            android:layout_alignBottom="@+id/photo1"
            android:text="July 4th, 2012" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper2"
        style="@style/contentWrapper"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wrapper1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo2"
            style="@style/photoPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/photo_text2"
            style="@style/photoText"
            android:layout_alignBottom="@+id/photo2"
            android:text="July 4th, 2013" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper3"
        style="@style/contentWrapper"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wrapper2"
        android:paddingLeft="4dp"
        android:paddingRight="8dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo3"
            style="@style/photoPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/photo_text3"
            style="@style/photoText"
            android:layout_alignBottom="@+id/photo3"
            android:text="July 4th, 2013" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper4"
        style="@style/contentWrapper"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wrapper3"
        android:paddingLeft="4dp"
        android:paddingRight="8dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo4"
            style="@style/photoPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/photo_text4"
            style="@style/photoText"
            android:layout_alignBottom="@+id/photo4"
            android:text="July 4th, 2013" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wrapper5"
        style="@style/contentWrapper"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wrapper4"
        android:paddingLeft="4dp"
        android:paddingRight="8dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo5"
            style="@style/photoPicture"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/photo_text5"
            style="@style/photoText"
            android:layout_alignBottom="@+id/photo5"
            android:text="July 4th, 2013" />
    </RelativeLayout>

</RelativeLayout>